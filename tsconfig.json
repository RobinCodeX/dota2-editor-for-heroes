{
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
		"node_modules",
		".vscode-test"
	],
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "sourceMap": true,
        "target": "es6",
        "strict": true,
        "lib": [
            "es6",
            "dom"
        ]
    }
}