{
	"name": "dota2-editor-for-heroes",
	"displayName": "Dota2 Editor For Heroes",
	"description": "Visual edit npc_heroes_custom.txt, herolist.txt, activelist.txt",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCustomEditor:dota2EditorForHeroes.editKeyValues",
		"onCustomEditor:dota2EditorForHeroes.editHeroList"
	],
	"main": "./out/extension.js",
	"contributes": {
		"customEditors": [
			{
				"viewType": "dota2EditorForHeroes.editKeyValues",
				"displayName": "Dota2 Editor For Heroes",
				"selector": [
					{
						"filenamePattern": "**/*/scripts/npc/npc_heroes_custom.txt"
					}
				]
			},
			{
				"viewType": "dota2EditorForHeroes.editHeroList",
				"displayName": "Dota2 Editor For Heroes",
				"selector": [
					{
						"filenamePattern": "**/*/scripts/npc/herolist.txt"
					},
					{
						"filenamePattern": "**/*/scripts/npc/activelist.txt"
					}
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "gulp build",
		"lint": "eslint src --ext ts",
		"watch": "gulp watch",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^7.1.1",
		"@rollup/plugin-typescript": "^4.0.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.44.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"@typescript-eslint/parser": "^2.26.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"gulp": "^4.0.2",
		"gulp-cli": "^2.2.0",
		"gulp-sass": "^4.0.2",
		"gulp-sourcemaps": "^2.6.5",
		"gulp-typescript": "^6.0.0-alpha.1",
		"mocha": "^7.1.1",
		"node-sass": "^4.13.1",
		"rollup": "^2.3.4",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"easy-keyvalues": "0.0.4"
	}
}
